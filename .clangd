{
  "Index": {
    "Background": "Build"
  },
  "Completion": {
    "AllScopes": true
  },
  "InlayHints": {
    "BlockEnd": "Yes",
    "Designators": "Yes",
    "Enabled": "Yes",
    "ParameterNames": "Yes",
    "DeducedTypes": "Yes",
    "TypeNameLimit": 0
  },
  "Hover": {
    "ShowAKA": "Yes"
  },
  "Diagnostics": {
    "MissingIncludes": "Strict",
    "ClangTidy": {
      "FastCheckFilter": "None",
      "Add": [
        "clang-diagnostic-*",
        "clang-analyzer-*",
        "modernize-*",
        "llvm-*",
        "performance-*",
        "cppcoreguidelines-*",
        "readability-*",
        "cert-*",
        "bugprone-*",
        "portability-*",
        "hicpp-*",
        "misc-*",
        "concurrency-*",
        "google*"
      ],
      "Remove": [
        "cppcoreguidelines-avoid-magic-numbers",
        "readability-magic-numbers",
        "misc-no-recursion"
      ]
    }
  }
}